<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PLEASE WAIT TILL WE PROCESS..."
        android:id="@+id/textView10"
        android:textColor="@color/white"
        android:paddingBottom="30dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="50dp"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Compatible Blood Types"
            android:paddingTop="20dp"
            android:textSize="35dp"
            android:id="@+id/textView"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorPrimaryDarker"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="O- can receive O-"
            android:id="@+id/textView2"
            android:paddingLeft="5dp"
            android:textSize="20dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="O+ can receive O+, O-"
            android:paddingLeft="5dp"
            android:id="@+id/textView3"
            android:textSize="20dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A- can receive A-, O-"
            android:paddingLeft="5dp"
            android:id="@+id/textView4"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A+ can receive A+, A-, O+, O-"
            android:id="@+id/textView5"
            android:paddingLeft="5dp"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B- can receive B-, O-"
            android:paddingLeft="5dp"
            android:id="@+id/textView6"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="B+ can receive B+, B-, O+, O-"
            android:paddingLeft="5dp"
            android:id="@+id/textView7"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AB- can receive AB-, B-, A-, O-"
            android:id="@+id/textView8"
            android:paddingLeft="5dp"
            android:textSize="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AB+ can receive AB+, AB-, B+, B-, A+,  A-,  O+,  O-"
            android:paddingLeft="5dp"
            android:textSize="18dp"
            android:paddingBottom="20dp"/>
    </LinearLayout>


</LinearLayout>