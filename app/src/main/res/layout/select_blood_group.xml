<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dirty_white">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Blood Group"
        android:id="@+id/textView"
        android:textSize="20dip"
        android:paddingTop="10dp"
        android:textColor="@color/colorPrimaryDarker"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/aplus"
        android:layout_below="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="41dp"
        android:background="@drawable/a_posetive"
        android:layout_marginTop="75dp" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/aminus"
        android:background="@drawable/a_negetive"
        android:layout_alignTop="@+id/aplus"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="41dp" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/bplus"
        android:background="@drawable/b_posetive"
        android:layout_below="@+id/aplus"
        android:layout_alignParentStart="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="9dp" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/bminus"
        android:layout_alignTop="@+id/bplus"
        android:background="@drawable/b_negetive"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="41dp" />
    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/abplus"
        android:layout_below="@+id/bplus"
        android:background="@drawable/ab_posetive"
        android:layout_alignParentStart="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="9dp" />

    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/abminus"
        android:layout_alignTop="@+id/abplus"
        android:background="@drawable/ab_negetive"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="41dp" />
    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/oplus"
        android:layout_below="@+id/abplus"
        android:background="@drawable/o_posetive"
        android:layout_alignParentStart="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="9dp" />
    <ImageButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/ominus"
        android:layout_alignTop="@+id/oplus"
        android:background="@drawable/o_negetive"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="41dp" />

</RelativeLayout>